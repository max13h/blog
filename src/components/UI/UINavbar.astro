---
import { Icon } from "astro-icon/components"
import UIDarkModeBtn from "./UIDarkModeBtn.astro"

type IconElement = {
  link: string
  name: string
  title: string
}

const { class: className, ...rest } = Astro.props

const icons: IconElement[] = [
  {
    link: "https://github.com/max13h/",
    name: "github",
    title: "Link to my github profil",
  },
  {
    link: "https://www.linkedin.com/in/hmae/",
    name: "linkedin",
    title: "Link to my linkedin profil",
  },
]
---

<nav class={className} {...rest}>
  <a href="/" class="home">
    <img src="/favicon.svg" alt="Link to home page" />
    <span>blog.hmae.fr</span>
  </a>

  <div class="links">
    {
      icons.map((icon) => (
        <a href={icon.link} target="_blank">
          <Icon name={icon.name} title={icon.title} />
        </a>
      ))
    }
    <UIDarkModeBtn />
  </div>
</nav>

<style>
  nav {
    display: flex;
    justify-content: space-between;
    padding: 1rem;
    position: sticky;
    width: 100%;
    top: 0;

    & .home {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      position: relative;
      color: inherit;
      text-decoration: none;
    }

    & .links {
      display: flex;
      align-items: center;
      gap: 0.5rem;

      & a {
        font-size: 1.5rem;
        color: inherit;

        &:visited {
          color: inherit;
        }
      }
    }
  }

  @media (width < 1280px) {
    nav {
      backdrop-filter: blur(1rem);
      & .home span {
        display: none;
      }
    }
  }
</style>
