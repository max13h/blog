---
import Layout from "../layouts/Layout.astro"
import { getCollection } from "astro:content"

const articles = await getCollection("articles")
---

<Layout>
  <h1>My posts</h1>
  <ul>
    {
      articles.map((article) => (
        <li>
          <a href={`/articles/${article.id}`}>{article.data.title}</a>
        </li>
      ))
    }
  </ul>
</Layout>
